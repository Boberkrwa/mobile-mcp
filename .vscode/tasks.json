{
    "version": "2.0.0",
    "tasks": [

        {
            "label": "Run Maccabi Pregnancy Tests (Jest)",
            "type": "shell",
            "command": "npx",
            "args": ["jest", "tests/maccabi_pregnancy_tests.test.ts", "--verbose", "--no-coverage"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "options": {
                "env": {
                    "DEBUG": "true"
                }
            }
        },
        {
            "label": "Run Jest Tests",
            "type": "shell",
            "command": "npm",
            "args": ["test"],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$tsc"],
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Run Specific Jest Test",
            "type": "shell",
            "command": "npx",
            "args": ["jest", "${file}"],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$tsc"],
            "runOptions": {
                "runOn": "default"
            }
        },

        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "npx",
            "args": ["jest", "tests/", "--verbose", "--detectOpenHandles"],
